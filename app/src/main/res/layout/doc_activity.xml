<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/doc_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical"
    tools:context="com.mibo.fishtank.activity.DocActivity"
    >

    <com.mibo.fishtank.weight.TitleBar
        android:id="@+id/doc_activity_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_b4154761"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="使用条款和隐私政策"
        android:textColor="@color/color_000000"
        android:textSize="15sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_e5e5e5"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="使用隐私条款和隐私政策使用隐私条款和隐私政策使用隐私条款和隐私政策使用隐私条款和隐私政策使用隐私条款和隐私政策"
        android:textColor="@color/color_000000"
        android:textSize="14sp"
        />
</LinearLayout>
